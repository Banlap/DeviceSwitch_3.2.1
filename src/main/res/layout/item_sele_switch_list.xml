<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
     android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_below="@+id/head_image"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:background="@drawable/selector_btn_orange"
        android:gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/select_devite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
         android:layout_weight="1.3"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/name_text"
             android:layout_alignParentRight="true"
             android:layout_marginRight="20dp"
             android:text="飞利浦智能开关前顶灯80W"
             android:textColor="@color/black"
             android:textSize="@dimen/text_size_16"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

         <LinearLayout
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/sid_text"
                 android:text="ASD2737373"
                 android:textSize="@dimen/text_size_15"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
             <TextView
                 android:id="@+id/status_text"
                 android:layout_marginLeft="50dp"
                 android:layout_marginRight="5dp"
                 android:text="离线"
                 android:textSize="@dimen/text_size_15"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

         </LinearLayout>

     </LinearLayout>
      <LinearLayout
          android:gravity="center"
          android:layout_weight="3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Switch
              android:id="@+id/kuaig_switch"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

      </LinearLayout>

    </LinearLayout>

</LinearLayout>