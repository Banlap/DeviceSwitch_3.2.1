<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/ll_scene_detail_list">
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
         android:layout_weight="1.3"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="飞利浦智能开关前顶灯80W"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

     </LinearLayout>


    </LinearLayout>
    <RelativeLayout

        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/devid_text"
            android:layout_marginLeft="20dp"
            android:text="SJD222882"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/swtch_dvei_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="开启"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/head_image"
        android:background="@color/color_list_diliver_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>